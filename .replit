modules = ["rust-stable", "postgresql-16"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "blog-server"

[[workflows.workflow]]
name = "blog-server"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "LEPTOS_OUTPUT_NAME=leptos-blog ./target/debug/leptos-blog"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80
